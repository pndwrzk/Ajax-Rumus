<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nn"
    android:paddingTop="17dp"
    tools:context=".PersegiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/persegi__"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sisi "
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Masukan Panjang sisi"
            android:id="@+id/inputsisipersegi"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Cm"
            android:textColor="#000000"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button

                android:id="@+id/btnKelilingpersegi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Hitung Keliling"
                android:background="@drawable/tombol_edge"
                android:padding="4dp"
                android:textColor="#ffff"
                android:layout_margin="15dp"/>

            <Button
                android:id="@+id/btnLuaspersegi"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Hitung LUAS"

                android:background="@drawable/tombol_edge"
                android:padding="8dp"
                android:textColor="#ffff"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center">


    <Button
            android:id="@+id/btnresetpersegi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RESET"
              android:textStyle="bold"
             android:background="@drawable/tombol_his"
             android:textColor="#000000"
            android:padding="8dp" />




    </LinearLayout>


        <TextView
            android:id="@+id/teks_keliling_persegi"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling :"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/teks_luas_persegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas      :"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"/>



    </LinearLayout>


</ScrollView>