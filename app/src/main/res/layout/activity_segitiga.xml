<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="17dp"
    android:background="@drawable/nn"
    tools:context=".SegitigaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sama_sisi"
            android:paddingTop="10dp"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sisi "
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Masukan Panjang SISI"
            android:layout_marginLeft="10dp"
            android:id="@+id/inputsisisegitiga"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="cm"
            android:textSize="18dp"/>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi "
            android:layout_marginLeft="10dp"
            android:textSize="18dp"

            android:textStyle="bold"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Masukan Panjang Tinggi"
                android:layout_marginLeft="10dp"
                android:inputType="numberDecimal"
                android:id="@+id/inputtinggisegitiga"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="cm"
                android:textSize="18dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alas "
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Masukan Panjang Alas"
            android:layout_marginLeft="10dp"
            android:id="@+id/inputalassegitiga"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="cm"
            android:textSize="18dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnKelilingsegitiga"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Hitung Keliling"
                android:background="@drawable/tombol_edge"
                android:padding="4dp"
                android:textColor="#ffff"
                android:layout_margin="15dp"/>


            <Button
                android:id="@+id/btnluassegitiga"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Hitung LUAS"
                android:background="@drawable/tombol_edge"
                android:padding="8dp"
                android:textColor="#ffff"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnresetsegitiga"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:background="@drawable/tombol_his"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="8dp" />



    </LinearLayout>


        <TextView
            android:id="@+id/teks_Kelilingsegitiga"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling :"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/teks_Luassegitiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas      :"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"/>



    </LinearLayout>


</ScrollView>