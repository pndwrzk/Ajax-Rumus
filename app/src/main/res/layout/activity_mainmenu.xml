<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainmenu"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/yiyi">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG CEPAT BANGUN DATAR"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="33dp"
        android:textColor="#fff" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Persegi"
        android:layout_marginTop="50dp"
        android:id="@+id/btn_persegi"
        android:layout_marginBottom="10dp"
        android:background="@drawable/tombol_edge"
        android:textColor="#FFFF"
        android:textSize="15dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lingkaran"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_lingkaran"
        android:background="@drawable/tombol_edge"
        android:textColor="#FFFF"
        android:textSize="15dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Segitiga"
        android:id="@+id/btn_segitiga"
        android:background="@drawable/tombol_edge"
        android:textColor="#FFFF"
        android:textSize="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Rumus"
        android:id="@+id/btn_catatrumus"
        android:background="@drawable/tombol_edge2"
        android:textColor="#FFFF"
        android:textSize="15dp"/>





</LinearLayout>